<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kaisalar.android_client.views.activities.ReportsActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/report_survey_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Survey Title" android:textSize="18sp" android:textColor="#3F51B5" android:text="Survey Title"
            android:textStyle="bold" android:textAlignment="center"/>

    <FrameLayout android:layout_width="0dp"
                 android:layout_height="0dp"
                 app:layout_constraintTop_toBottomOf="@+id/report_survey_title"
                 android:id="@+id/reportChartContiner"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintHorizontal_bias="0.0"
                 android:layout_marginTop="8dp"
                 android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/reportPreviuosButton">

    </FrameLayout>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/basic_button_background" android:textColor="#FFF"
            android:id="@+id/reportNextButton"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reportPreviuosButton"/>
    <Button
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/basic_button_background" android:textColor="#FFF"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/reportPreviuosButton"
    />


</android.support.constraint.ConstraintLayout>
