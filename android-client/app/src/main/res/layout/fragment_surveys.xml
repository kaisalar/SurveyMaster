<android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kaisalar.android_client.views.fragments.SurveysFragment"
        android:id="@+id/surveysRefreshLayout"
android:background="@color/color1">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include android:layout_width="wrap_content" android:layout_height="wrap_content"
                 layout="@layout/connection_error"
                 app:layout_constraintBottom_toBottomOf="@+id/surveysRecyclerView" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="@+id/surveysRecyclerView"
                 app:layout_constraintEnd_toEndOf="@+id/surveysRecyclerView"
                 app:layout_constraintStart_toStartOf="@+id/surveysRecyclerView" android:layout_marginStart="8dp"
                 android:id="@+id/connectionErrorHelperLayout" android:visibility="gone"/>
        <include android:layout_width="wrap_content" android:layout_height="wrap_content"
                 layout="@layout/loading_surveys" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/surveysRecyclerView" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="@+id/surveysRecyclerView" android:id="@+id/loadingHelperLayout"
                 android:visibility="gone"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/surveysRecyclerView"/>


        <android.support.design.widget.FloatingActionButton
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/addNewSurveyButton" android:backgroundTint="@color/color3"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.SwipeRefreshLayout>
