<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/constraintLayout">
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerTextNumberTextView"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    tools:text="Kotlin Course"
                    android:textSize="24sp"
                    android:textColor="@color/color3" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/surveyDateTextView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/surveyDateTextView"
                    tools:text="15-2-2019" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/surveyDescriptionTextView" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/answerTextNumberTextView"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    tools:text="This is a very very long long long description" android:textSize="18sp"/>
            <Button
                    android:text="Share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/surveyShareButton"
                    android:background="@drawable/normal_button_background"
                    android:textColor="@color/color2"
                    android:drawableStart="@drawable/ic_share"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/surveyCopyButton" android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/surveyDescriptionTextView"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                    android:text="@android:string/copy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/surveyCopyButton"
                    android:background="@drawable/normal_button_background"
                    android:textColor="@color/color2" android:drawableStart="@drawable/ic_copy_link"
                    app:layout_constraintTop_toTopOf="@+id/surveyShareButton"
                    app:layout_constraintBottom_toBottomOf="@+id/surveyShareButton"
                    app:layout_constraintStart_toEndOf="@+id/surveyShareButton"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/surveyDeleteButton"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/ic_delete"
                    android:id="@+id/surveyDeleteButton" android:background="@drawable/trans_button_background"
                    app:layout_constraintTop_toTopOf="@+id/surveyCopyButton"
                    app:layout_constraintBottom_toBottomOf="@+id/surveyCopyButton"
                    app:layout_constraintStart_toEndOf="@+id/surveyCopyButton"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:padding="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>