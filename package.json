{
  "name": "surveymaster",
  "version": "1.0.0",
  "description": "Survey Manager application for creating and publishing surveys",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "client-install": "cd client && npm i",
    "server-install": "cd server && npm i",
    "install": "yarn client-install && yarn server-install",
    "server": "cd server && yarn start",
    "client": "cd client && yarn start",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "author": "Mouaz Alkhodari, Kais Alar",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^1.14.6",
    "yarn": "^1.15.2"
  },
  "dependencies": {
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "files": "^1.0.0"
  }
}
